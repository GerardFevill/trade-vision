# MT5 Monitor - Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# Database (PostgreSQL)
# ===================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mt5monitor
POSTGRES_USER=mt5user
POSTGRES_PASSWORD=mt5password
POSTGRES_POOL_MIN=2
POSTGRES_POOL_MAX=10

# ===================
# API Configuration
# ===================
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:4200"]

# ===================
# Logging
# ===================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/mt5monitor.log

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_PER_MINUTE=100

# ===================
# MT5 Terminals
# ===================
MT5_TERMINAL_ROBOFOREX=C:\Program Files\RoboForex MT5 Terminal\terminal64.exe
MT5_TERMINAL_ICMARKETS=C:\Program Files\MetaTrader 5 IC Markets Global\terminal64.exe

# ===================
# MT5 Accounts (JSON format)
# Each account: {"id": int, "password": str, "server": str, "name": str, "terminal": str}
# ===================
MT5_ACCOUNTS=[{"id":12345,"password":"your_password","server":"Broker-Server","name":"Account Name","terminal":"roboforex"}]
